---
import MainLayout from '../../layouts/main-layout.astro';
import { notePosts } from '../../lib/utils/note-post';
import '../../styles/global.css';

const posts = notePosts().posts;
const tagSet = notePosts().tagsSet;
---

<MainLayout>
  <div class="flex flex-col divide-y">
    <div class="flex flex-wrap">
      {
        tagSet.map((tag) => (
          <div class="flex flex-row pr-4 pb-2">
            <a>{tag}</a>
          </div>
        ))
      }
    </div>

    {
      posts.map(({ url, title, date }) => (
        <div class="entry-row">
          <a href={url} class="flex-1 truncate">
            {title}
          </a>
          <div class="text-gray-500 hidden sm:block pr-4">{date}</div>
        </div>
      ))
    }
  </div>
</MainLayout>
