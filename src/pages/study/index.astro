---
import MainLayout from '../../layouts/main-layout.astro';
import '../../styles/global.css';
import { studyPosts, type StudyGroup } from '../../lib/utils/study-post';

const posts = studyPosts();
---

<MainLayout>
  <div class="flex flex-col divide-y">
    {
      //자식이 있는지 없는지 확인
      posts.map((group) => {
        const hasSelfAsChild =
          group.children.length === 1 &&
          group.children[0].title === group.folder;

        return (
          <div>
            {/* 상위 폴더 */}
            <div class="entry-row hover:bg-white">
              <a href={group.parentUrl} class="flex-1 truncate">
                {group.folder}
              </a>
              <div class="text-gray-500 hidden sm:block pr-4">
                {group.folderStartDate}
              </div>
            </div>

            {/* 자식 파일 */}
            {group.children.length > 0 && !hasSelfAsChild && (
              <div class="pl-4 border-l border-gray-300 ">
                {group.children.map((child) => (
                  <div class="entry-row hover:bg-white">
                    <a href={child.url} class="flex-1 truncate ">
                      {child.title}
                    </a>
                  </div>
                ))}
              </div>
            )}
          </div>
        );
      })
    }
  </div>
</MainLayout>
