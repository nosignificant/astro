---
import Navigation from '../components/Navigation';
import { Menus } from '../lib/data/menus';

import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
import '../styles/global.css';

const { pageTitle, description } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html lang="en">
  <head>
    <BaseHead pageTitle={pageTitle} />
  </head>
  <body class="flex justify-center">
    <div
      class="w-full lg:text-sm max-w-3xl px-[30px] lg:ml-[100px] lg:mr-[100px]"
    >
      <div class="mt-[100px]"></div>
      {
        Menus.map((menu) => ( 
          <div>{currentPath === menu.url ? 
          <h2 class="mb-2">{menu.name}</h2> 
          <div>{menu.description}</div> : ''}</div>
        ))
      }
      <Navigation client:load currentPath={currentPath} Menus={Menus} />
      <main>
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
